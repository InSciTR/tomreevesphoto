---
import BaseLayout from "./BaseLayout.astro";
const { title, pubDate, excerpt } = Astro.props;
---

<BaseLayout title={title}>
    <article class="
      max-w-prose mx-auto px-6 py-8
      prose prose-invert prose-img:rounded
      overflow-x-auto
      [&>*:not(:first-child)]:mt-6
    ">
    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-2">{title}</h1>
      <p class="text-sm text-gray-400">
        {new Date(pubDate).toLocaleDateString(undefined, {
          year: "numeric",
          month: "long",
          day: "numeric"
        })}
      </p>
      {excerpt && (
        <p class="mt-4 text-gray-300 italic">{excerpt}</p>
      )}
    </header>

    <div class="prose prose-invert prose-img:rounded">
      <slot />
    </div>
  </article>
</BaseLayout>


