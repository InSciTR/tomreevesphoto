---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Home">
  <!-- • Hero • -->
  <section class="flex flex-col items-center text-center px-6 py-16 sm:py-24 space-y-6">
    <h1 class="text-4xl sm:text-6xl font-bold tracking-wide drop-shadow-lg">
      NYC PHOTOGRAPHER
    </h1>
    <p class="max-w-xl text-gray-400">
      Relaxed portraiture, fashion energy, and everyday humanity.
      <br />Come see yourself through my lens in New York City and beyond.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 sm:space-x-4 pt-4">
      <a href="/images"
          class="px-6 py-3 border border-blue-500/50 hover:bg-blue-500/50 rounded shadow-lg tracking-wider">
        View Images
      </a>
      <a href="/essays"
          class="px-6 py-3 border border-blue-500/50 hover:bg-blue-500/50 rounded shadow-lg tracking-wider">
        Read Essays
      </a>
    </div>
  </section>

  <!-- • Featured gallery teaser • -->
  <section class="max-w-4xl mx-auto px-4 pb-24">
    <h2 class="text-2xl font-bold mb-4 text-center">FEATURED IMAGES</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      <a href="/images/featured-images" class="block aspect-square overflow-hidden rounded-lg hover:opacity-90 transition-opacity">
        <picture>
          <img src="/sets/featured-images/TR001.webp" alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy"/>
        </picture>
      </a>
      <a href="/images/featured-images" class="block aspect-square overflow-hidden rounded-lg hover:opacity-90 transition-opacity">
        <picture>
          <img src="/sets/featured-images/TR002.webp" alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy"/>
        </picture>
      </a>
      <a href="/images/featured-images" class="block aspect-square overflow-hidden rounded-lg hover:opacity-90 transition-opacity">
        <picture>
          <img src="/sets/featured-images/TR003.webp" alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy"/>
        </picture>
      </a>
    </div>
    <div class="text-center pt-6">
      <a href="/images/featured-images" class="text-sm hover:text-blue-500/50 inline-flex items-center gap-1">
        See full set
        <span class="text-lg">→</span>
      </a>
    </div>
  </section>
</BaseLayout>
