---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Home">
  <!-- • Hero • -->
  <section class="flex flex-col items-center text-center py-24 space-y-6">
    <h1 class="text-6xl font-bold tracking-wide drop-shadow-lg">
      NYC PHOTOGRAPHER
    </h1>
    <p class="max-w-xl text-gray-400">
      Relaxed portraiture, fashion energy, and everyday humanity.
      <br />Come see yourself through my lens in New York City and beyond.
    </p>
    <div class="flex space-x-4 pt-4">
      <a href="/images"
          class="px-6 py-3 border border-blue-500/50 hover:bg-blue-500/50 rounded shadow-lg tracking-wider">
        View Images
      </a>
      <a href="/words"
          class="px-6 py-3 border border-blue-500/50 hover:bg-blue-500/50 rounded shadow-lg tracking-wider">
        Read Essays
      </a>
    </div>
  </section>

  <!-- • Featured gallery teaser (static for now) • -->
  <section class="px-6 pb-24">
    <h2 class="text-L font-bold mb-3">FEATURED IMAGES:</h2>
    <div class="grid gap-3 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <!-- swap these three <picture> blocks with any favourite thumbnails -->
      <picture>
        <img src="/sets/featured-images/001.webp" alt="" class="w-full h-auto" loading="lazy"/>
      </picture>
      <picture>
        <img src="/sets/featured-images/002.webp" alt="" class="w-full h-auto" loading="lazy"/>
      </picture>
      <picture>
        <img src="/sets/featured-images/003.webp" alt="" class="w-full h-auto" loading="lazy"/>
      </picture>
    </div>
    <div class="text-right pt-4">
      <a href="/images/featured-images" class="text-sm hover:text-blue-500/50">See full set →</a>
    </div>
  </section>
</BaseLayout>
